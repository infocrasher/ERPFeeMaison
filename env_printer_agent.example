# Configuration Agent d'Impression (Machine POS)
# Copier ce fichier vers .env sur la machine POS et ajuster les valeurs

# Activation du service d'impression
PRINTER_ENABLED=true

# Configuration USB de l'imprimante
PRINTER_VENDOR_ID=0471
PRINTER_PRODUCT_ID=0055
PRINTER_INTERFACE=0
PRINTER_TIMEOUT=5000

# Configuration Agent (pour permettre l'accès depuis le VPS)
# L'agent écoute sur toutes les interfaces (0.0.0.0) pour accepter les connexions du VPS
PRINTER_AGENT_HOST=0.0.0.0
PRINTER_AGENT_PORT=8080

# Token d'authentification (GÉNÉRER UN TOKEN SÉCURISÉ !)
# Utilisez: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
PRINTER_AGENT_TOKEN=your_secure_token_here_change_me

# Logs
PRINTER_LOG_LEVEL=INFO

